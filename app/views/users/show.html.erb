<div class="container" id="my-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <strong>Your Profile</strong>
        </div>
        <div class="panel-body">
          <%= image_tag show_image(@user.image, :med), class: 'img-responsive thumbnail center-block' %>
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
              <table class="table table-condensed">
                <tbody>
                  <tr>
                    <td>
                      <strong>First Name:</strong>
                    </td>
                    <td>
                      <%= @user.first_name %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Last Name:</strong>
                    </td>
                    <td>
                      <%= @user.last_name %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Email Address:</strong>
                    </td>
                    <td>
                      <%= @user.email %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Gender:</strong>
                    </td>
                    <td>
                      <%= @user.gender %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Account Created:</strong>
                    </td>
                    <td>
                      <%= render_time @user.created_at %>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="2">
                      <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-default btn-block' %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-md-3"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
