<div class="container" id="my-container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong>Sign Up Here</strong>
        </div>
        <div class="panel-body">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <img class="img-responsive center-block" src="https://cdn4.iconfinder.com/data/icons/small-n-flat/24/user-group-128.png" >
            </div>
            <div class="row">
              <div class="col-md-10 col-md-offset-1">
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-user"></i>
                      First Name
                    </span>
                    <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'First Name', required: true, maxlength: 60 %>
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-user"></i>
                      Last Name
                    </span>
                    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name', required: true, maxlength: 60 %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-envelope"></i>
                    </span>
                    <%= f.email_field :email, autocomplete: 'on', class: 'form-control', placeholder: 'Email Address', required: true, pattern: ApplicationHelper::EMAIL_FORMAT %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-lock"></i>
                    </span>
                    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password', required: true, minlength: 6 %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-lock"></i>
                    </span>
                    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Password', required: true, minlength: 6 %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <%= f.label :Select_gender %>
                    <%= f.select :gender, options_for_select(get_genders), {}, class: "form-control" %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-picture"></i>
                    </span>

                    <%= f.fields_for :image, Image.new do |image_form| %>
                      <%= image_form.file_field :image,class: 'form-control' %>
                    <% end %>
                  </div>
                </div>
                </br>
                <div class="form-group">
                  <%= f.submit "Sign Up", class: 'btn btn-lg btn-success btn-block' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

