<div class="container" id="my-container">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class='panel-heading text-center'>
         <strong>Forgot your password</strong>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter your email address here' %>
          </div>
          <div class="actions">
            <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary center-block form-control' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
