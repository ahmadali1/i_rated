<%= nested_form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :released_date %><br>
    <%= f.date_select :released_date %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.cktext_area :description %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :embedded_video %><br>
    <%= f.text_field :embedded_video %>
  </div>
  <div>
    <%= f.fields_for :images do |image| %>
      <%= image_tag fetch_image image.object, :med unless image.object.new_record? %>
      <%= image.file_field :image %>
      <%= image.link_to_remove "Remove Poster" %>
    <% end %>

    <%= f.link_to_add "Add Posters", :images %>
  </div>
  <div class="field">
    <%= f.label :genre %><br />
    <%= f.select :genre, options_for_select(collection_for_movie_genre), include_blank: 'Please Select Genre' %>
  </div>
  <div class="field">
    <%= f.select :actor_ids, options_from_collection_for_select(@all_actors, 'id', 'name', @selected), {}, { multiple: true } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
