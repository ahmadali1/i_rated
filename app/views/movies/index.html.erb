<p id="notice"><%= notice %></p>

<div id="my-container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">
          <h1 class="text-center">Movie Listings</h1>
          <div class="clearfix"></div>
          <table class="table table-striped table-hover">
            <thead class="thead-default">
              <tr>
                <th></th>
                <th colspan="2">Name</th>
                <th>Released date</th>
                <th colspan="2">Ratings</th>
              </tr>
            </thead>

            <tbody>

              <% @movies.each do |movie| %>
                <tr>
                  <td>
                    <div>

                      <%= link_to movie_path(movie) do %>
                        <%= image_tag fetch_thumbnail(movie.images.first, :small), class: 'img-responsive img-thumbnail thumbnails' %>
                      <% end %>
                    </div>
                  </td>
                  <td class="vert-align" colspan="2">
                    <strong class="movie-font">

                      <%= link_to movie_path(movie), class: 'btn btn-default default-btn' do %>
                        <%= movie.name %>
                      <% end %>
                    </strong>
                  </td>
                  <td class="vert-align"><%= movie.released_date %></td>
                  <td class="vert-align" colspan="2">
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @movies %>
        </div>
        <%= link_to 'Create New Movie', new_movie_path, class: 'btn btn-info btn-block' %>
      </div>
    </div>
  </div>
</div>

