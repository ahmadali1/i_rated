<%= form_for([@movie, @rating], remote: true) do |f| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>Your rating</p>
<div id="user_star"></div>

  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script type="text/javascript">
  $('#user_star').raty({
  score: <%= Rating.last.score %>,
  path: '/assets',
  click: function(score, evt) {
    $.ajax({
      url: '/movies/'+<%= @movie.id %> + '/ratings/' + <%= Rating.last.id %> ,
      type: 'PATCH',
      data: { score: score }
    }).done(function (data){});
  }
}); 

</script>