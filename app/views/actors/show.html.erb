<div class='container' id='my-container'>
  <div class='row'>
    <div class='col-md-8 col-md-offset-2'>
      <div class='panel panel-default'>
        <div class='panel-heading text-center'>
          <strong>Actor Details</strong>
        </div>
        <div class='panel-body'>
          <div class='row'>
            <div class='col-md-5'>
              <div id='myCarousel' class='carousel slide' data-ride='carousel'>
                <div class='carousel-inner' role='listbox'>
                  <div class='item active'>
                    <%= image_tag fetch_thumbnail(@actor.images.first, :large) %>
                  </div>
                  <% @actor.images.each do |image| %>
                    <div class='item'>
                      <%= image_tag show_image(image) %>
                    </div>
                  <% end %>
                </div>
                <%= link_to '#myCarousel', {role: 'button', 'data-slide': 'prev', class: 'left carousel-control'} do %>
                  <span class='glyphicon glyphicon-chevron-left' aria-hidden='true'></span>
                  <span class='sr-only'>Previous</span>
                <% end %>
                <%= link_to '#myCarousel', {role: 'button', 'data-slide': 'next', class: 'right carousel-control'} do %>
                  <span class='glyphicon glyphicon-chevron-right' aria-hidden='true'></span>
                  <span class='sr-only'>Next</span>
                <% end %>
              </div>
            </div>

            <div class='col-md-7 top-margin-6'>
              <table class='table table-condensed'>
                <tbody>
                  <tr>
                    <td>
                      <strong>Name:</strong>
                    </td>
                    <td>
                      <%= @actor.name.titleize %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Age:</strong>
                    </td>
                    <td>
                      <%= @actor.age %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Country:</strong>
                    </td>
                    <td>
                      <h1 class='block-inline initial-font-size'><%= @actor.country %></h1>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Gender:</strong>
                    </td>
                    <td>
                      <%= @actor.gender %>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <strong>Date of Birth:</strong>
                    </td>
                    <td>
                      <%= @actor.date_of_birth %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <h3><strong>Biography</strong></h3>
          <p class='text-justify'><%= @actor.biography %><p>
          <div class='row'>
            <div class='col-md-12'>
              <h4><%= @actor.name%> has acted in</h4>
              <table class='table table-striped table-hover'>
                <tbody>
                  <% @acted_movies.each do |movie| %>
                    <tr>
                      <td>
                        <div class='row'>
                          <div class='col-md-3 col-sm-3 col-xs-12'>
                            <%= link_to movie_path(movie) do %>
                              <%= image_tag fetch_thumbnail(movie.images.first, :med), class: 'index-images' %>
                            <% end %>
                          </div>
                          <div class='col-md-7 col-sm-7 col-xs-12'>
                            <div class='clearfix-margin-5 top-margin-2'>
                              <%= link_to movie_path(movie), class: 'link-class' do %>
                                <h2 class='block-inline'><%= movie.name.titleize %></h2>
                              <% end %>
                              <h2 class='block-inline'><small>(<%= render_date movie.released_date %>)</small></h2>
                            </div>
                            <div class='clearfix-margin-5 <%= hide_content movie.genre %>'>
                              <h4 class='block-inline'>
                                <strong>Genre : </strong><%= movie.genre %>
                              </h4>
                            </div>
                            <div id='storyline' class=<%= hide_content movie.description %>>
                              <h5 class='block-inline'><strong>Storyline :</strong></h5>
                              <%= truncate(sanitize(movie.description.capitalize), length: 100) %>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @acted_movies %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'movies/image_modal' %>

<% content_for :js_init do %>
  ImageModal.init();
<% end %>
